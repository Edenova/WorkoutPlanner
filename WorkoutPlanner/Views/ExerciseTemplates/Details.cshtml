@model WorkoutPlanner.Models.ExerciseTemplate

<h2 class="mb-4">@Model.Name</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Muscle Group:</strong> @Model.MuscleGroup</p>
        <p><strong>Type:</strong> @Model.Type</p>
        <p><strong>Equipment:</strong> @Model.Equipment</p>
        <p><strong>Difficulty:</strong> @Model.Difficulty/5</p>
        <p><strong>Description:</strong> @Model.Description</p>
        @if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            <p><strong>Video:</strong> <a href="@Model.VideoUrl" target="_blank">Watch Demo</a></p>
        }
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>