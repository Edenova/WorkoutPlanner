@model WorkoutPlanner.Models.Regimen

<h2 class="mb-4">@Model.Name</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Created By:</strong> @ViewBag.CreatorName</p>
        <h5 class="mt-3">Exercises</h5>
        <ul class="list-group list-group-flush">
            @foreach (var exercise in Model.Exercises)
            {
                <li class="list-group-item">
                    @exercise.ExerciseTemplate.Name - @exercise.Sets sets x @exercise.Reps reps
                    <br />
                    <small class="text-muted">
                        Muscle: @exercise.ExerciseTemplate.MuscleGroup |
                        Equipment: @exercise.ExerciseTemplate.Equipment
                    </small>
                </li>
            }
        </ul>
        <a asp-action="Index" class="btn btn-outline-primary mt-3">Back to List</a>
    </div>
</div>